<?xml version="1.0" encoding="utf-8"?>
<com.mingz.billing.ui.SizeLimitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:layout_gravity="center"
    app:widthScale="0.67"
    android:background="@color/themeWhite">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="HardcodedText">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资产名称"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/themeColor"/>
        
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:text="资产类型名称"
            android:textSize="@dimen/mostTextSize"
            android:textColor="@color/themeGrey"
            android:hint="请输入名称"
            android:inputType="textNoSuggestions"
            android:autofillHints="none"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@drawable/bg_blue_outline_with_color"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            tools:ignore="HardcodedText">
        
            <TextView
                android:id="@+id/okBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/themeGrey"
                android:background="@drawable/bg_dialog_btn"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="@dimen/mostTextSize"
                android:textColor="@color/themeColor"/>
        
            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/themeGrey"
                android:background="@drawable/bg_dialog_btn"/>
    
        </LinearLayout>
        
    </LinearLayout>

</com.mingz.billing.ui.SizeLimitLayout>