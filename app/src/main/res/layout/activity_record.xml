<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end"
    tools:context=".activities.RecordActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/themeWhite"
        tools:ignore="ContentDescription">
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/interval"
            android:paddingEnd="@dimen/interval"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
        
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="标题"
                android:textSize="@dimen/titleTextSize"
                android:textColor="@color/themeColor"/>
        
            <!--切换账单类型-->
            <ImageView
                android:id="@+id/toggle"
                android:layout_width="@dimen/drawableSize"
                android:layout_height="@dimen/drawableSize"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_switch_type"
                android:tint="@color/themeColor"/>
    
        </RelativeLayout>
    
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/themeColor"/>
    
        <FrameLayout
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/interval"
            android:paddingEnd="@dimen/interval"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            tools:ignore="HardcodedText">
        
            <com.mingz.billing.ui.DrawableTextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_blue_outline_with_color_and_feedback"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/themeGrey"
                android:textSize="@dimen/btnTextSize"
                android:drawableStart="@drawable/ic_exit"
                app:drawableStartWidth="@dimen/drawableSize"
                app:drawableStartHeight="@dimen/drawableSize"
                tools:drawableStartWidth="30dp"
                tools:drawableStartHeight="30dp"
                android:drawableTint="@color/themeColor"
                android:drawablePadding="10dp"/>
        
            <com.mingz.billing.ui.DrawableTextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_blue_outline_with_color_and_feedback"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/themeGrey"
                android:textSize="@dimen/btnTextSize"
                android:drawableStart="@drawable/ic_save"
                app:drawableStartWidth="@dimen/drawableSize"
                app:drawableStartHeight="@dimen/drawableSize"
                tools:drawableStartWidth="30dp"
                tools:drawableStartHeight="30dp"
                android:drawableTint="@color/themeColor"
                android:drawablePadding="10dp"/>
    
        </RelativeLayout>
        
    </LinearLayout>
    
    <com.mingz.billing.ui.SizeLimitLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:widthScale="0.67"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_bottom_dialog">
        
        <com.mingz.billing.ui.MultilevelListView
            android:id="@+id/optionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null"
            android:listSelector="@android:color/transparent"/>
        
    </com.mingz.billing.ui.SizeLimitLayout>

</androidx.drawerlayout.widget.DrawerLayout>