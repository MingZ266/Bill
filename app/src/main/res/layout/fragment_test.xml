<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeWhite"
    tools:context=".fragments.TestFragment">
    
    <com.mingz.billing.ui.ShowDateTime
        android:id="@+id/showDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="@dimen/interval"
        android:layout_marginEnd="@dimen/interval"/>
    
    <com.mingz.billing.ui.ShowText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="可输入"
        app:editable="true"
        android:hint="请输入"
        tools:ignore="HardcodedText"/>
    
    <com.mingz.billing.ui.ShowText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="不可输入"
        app:editable="false"
        android:hint="请输入"
        tools:ignore="HardcodedText"/>
    
    <com.mingz.billing.ui.ShowText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="禁用 - 可输入"
        android:enabled="false"
        app:editable="true"
        android:hint="请输入"
        tools:ignore="HardcodedText"/>
    
    <com.mingz.billing.ui.ShowText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="禁用 - 不可输入"
        android:enabled="false"
        app:editable="false"
        android:hint="请输入"
        tools:ignore="HardcodedText"/>
    
    <com.mingz.billing.ui.MultilevelListView
        android:id="@+id/dataListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>

</LinearLayout>