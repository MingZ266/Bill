<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/sidebarInterval"
    android:paddingEnd="@dimen/sidebarInterval"
    android:paddingTop="7.5dp"
    android:paddingBottom="7.5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bg_sidebar_item">
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:src="@drawable/ic_arrow_open"
        tools:ignore="ContentDescription"/>
    
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="选项"
        android:textSize="@dimen/mostTextSize"
        android:textColor="@color/themeGrey"/>
    
</LinearLayout>