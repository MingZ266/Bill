<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchAnimView">
        <!-- 切换时遮罩的颜色，无视透明度. -->
        <attr format="color" name="maskColor" />
    </declare-styleable>
    
    <declare-styleable name="DateTimePicker">
        <attr name="pickerMode" format="enum">
            <enum name="all" value="0"/>
            <enum name="date" value="1"/>
            <enum name="time" value="2"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="MultilevelListView">
        <!-- 若设置，则每级最多只能展开一个. -->
        <attr format="boolean" name="atMostExpandOne" />
    </declare-styleable>
    
    <declare-styleable name="DrawableTextView">
        <attr name="android:drawableStart"/>
        <attr name="drawableStartWidth" format="dimension"/>
        <attr name="drawableStartHeight" format="dimension"/>
        <attr name="android:drawableEnd"/>
        <attr name="drawableEndWidth" format="dimension"/>
        <attr name="drawableEndHeight" format="dimension"/>
        <attr name="android:drawableTop"/>
        <attr name="drawableTopWidth" format="dimension"/>
        <attr name="drawableTopHeight" format="dimension"/>
        <attr name="android:drawableBottom"/>
        <attr name="drawableBottomWidth" format="dimension"/>
        <attr name="drawableBottomHeight" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="SizeLimitLayout">
        <attr name="widthScale" format="float"/>
        <attr name="heightScale" format="float"/>
    </declare-styleable>
    
    <declare-styleable name="CheckedLinearLayout">
        <attr name="android:checked"/>
    </declare-styleable>
    
    <!-- ******** 组合视图 ******** -->
    <declare-styleable name="ShowDateTime">
        <attr name="android:enabled"/>
    </declare-styleable>
    
    <declare-styleable name="AmountOfMoney">
        <attr name="title"/>
        <attr name="showType" format="boolean"/>
        <attr name="android:enabled"/>
    </declare-styleable>
    
    <declare-styleable name="ShowText">
        <attr name="title"/>
        <attr name="android:enabled"/>
        <attr name="editable" format="boolean"/>
        <attr name="android:hint"/>
    </declare-styleable>
    
    <declare-styleable name="ExampleView">
        <!--按钮和输入文本的颜色.-->
        <attr name="android:textColor" />
        <!--按钮的背景颜色.-->
        <attr format="color" name="btnBgColor" />
    </declare-styleable>
    
    <!-- 测试. -->
    <declare-styleable name="TestViewGroup">
        <attr format="string" name="myTagGroup" />
        <attr format="color" name="colorGroup" />
    </declare-styleable>
    
    <declare-styleable name="TestView">
        <attr format="string" name="myTag" />
        <attr format="color" name="color" />
    </declare-styleable>
</resources>