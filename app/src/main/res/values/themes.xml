<resources>
    <!-- Base application theme. -->
    <style name="Theme.Billing" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/themeWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="Theme.Billing.Activity" parent="Theme.Billing">
        <item name="android:statusBarColor">@color/themeWhite</item>
    </style>
    
    <style name="DateTimePicker">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/themeGrey</item>
        <item name="android:editTextColor">@color/themeGrey</item>
        <item name="android:textColorHighlight">@color/themeColorHalfA</item>
        <item name="colorControlNormal">@color/themeColor</item>
    </style>
    
    <style name="CheckBoxStyle">
        <item name="colorControlNormal">@color/themeColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
    </style>
    
    <style name="RoundCornerDialog" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">@dimen/radius</item>
    </style>
</resources>