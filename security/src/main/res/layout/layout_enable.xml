<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:background="@drawable/bg_fill"
    android:orientation="horizontal">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/enable"
        android:textSize="@dimen/textAboveM"
        android:textColor="@color/commonText"
        tools:ignore="RelativeOverlap"/>
    
    <com.mingz.share.ui.Switch
        android:id="@+id/enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        app:autoToggle="false"
        app:trackColor="@color/switch_track"
        app:thumbColor="@color/bgLight"/>

</RelativeLayout>