<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    tools:layout_gravity="center"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/passwdTitle"
        android:textSize="@dimen/textSmall"
        android:textColor="@color/themeColor"/>
    
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:hint="@string/passwdHint"
        android:textColorHint="@color/hintColor"
        android:autofillHints="@null"
        android:textSize="@dimen/textMedium"
        android:textColor="@color/commonText"
        android:inputType="textPassword"
        android:background="@drawable/bg_stroke_and_fill"
        android:theme="@style/CursorStyle"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ok"
        android:textSize="@dimen/textMedium"
        android:textColor="@color/bgLight"
        android:background="@drawable/bg_common_button"
        style="?android:attr/borderlessButtonStyle"/>
    
</LinearLayout>