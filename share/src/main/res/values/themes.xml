<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bill" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryVariant">@color/deepTheme</item>
        <item name="colorOnPrimary">@color/bgLight</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/bgLight</item>
        <item name="android:navigationBarColor">@color/bgDeep</item>
    </style>
    
    <style name="DateTimePicker">
        <!-- 选择器内文本及分隔符文本尺寸. -->
        <item name="android:textSize">@dimen/mediumText</item>
        <!-- 分隔符文本颜色. -->
        <item name="android:textColor">@color/commonText</item>
        <!-- 选择器内文本颜色. -->
        <item name="android:editTextColor">@color/commonText</item>
        <!-- 选择器内分隔线颜色. -->
        <item name="colorControlNormal">@color/themeColor</item>
    </style>
    
    <!-- 为底部弹窗设置进入和退出动画. -->
    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>
    
    <!-- 为屏幕中间显示的弹窗设置圆角半径. -->
    <style name="RoundCornerDialog" parent="Theme.AppCompat.Dialog">
        <!-- 弹窗的圆角半径. -->
        <item name="dialogCornerRadius">@dimen/cornerRadius</item>
    </style>
    
    <!-- 用于EditText设置光标相关样式. -->
    <style name="CursorStyle">
        <!-- 光标的颜色. -->
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <!-- 选中高亮文本的颜色. -->
        <item name="android:textColorHighlight">@color/halfATheme</item>
        <!-- 光标定位图标（小泪滴）的颜色. -->
        <item name="colorControlActivated">@color/themeColor</item>
    </style>
</resources>