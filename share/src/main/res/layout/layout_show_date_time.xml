<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:layout_width="match_parent"
    tools:layout_height="wrap_content"
    tools:gravity="center_vertical"
    tools:paddingHorizontal="10dp"
    tools:paddingVertical="5dp"
    tools:background="@drawable/bg_fill_when_enable"
    tools:orientation="horizontal">
    
    <ImageView
        android:id="@+id/dateIcon"
        android:layout_width="@dimen/iconSideLen"
        android:layout_height="@dimen/iconSideLen"
        android:src="@drawable/ic_date"
        android:tint="@color/themeColor"
        tools:ignore="ContentDescription"/>
    
    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:text="1970 - 01 - 01"
        android:textSize="@dimen/mediumText"
        android:textColor="@color/commonText"/>
    
    <ImageView
        android:id="@+id/timeIcon"
        android:layout_width="@dimen/iconSideLen"
        android:layout_height="@dimen/iconSideLen"
        android:src="@drawable/ic_time"
        android:tint="@color/themeColor"
        tools:ignore="ContentDescription"/>
    
    <TextView
        android:id="@+id/timeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="10dp"
        tools:text="08 : 00"
        android:textSize="@dimen/mediumText"
        android:textColor="@color/commonText"/>

</merge>